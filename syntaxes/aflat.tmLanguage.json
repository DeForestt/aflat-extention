{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "AFlat",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comment"
		},
		{
			"include": "#function"
		},
		{
			"include": "#slcomment"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.aflat",
				"match": "\\b(if|while|class|struct|int|as|adr|char|float|return)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.aflat",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.aflat",
					"match": "\\\\."
				}
			]
		},
		"comment":{
			"name":"comment.block",
			"begin":"\\/\\*",
			"end":"\\*\\/"
		},
		"functoin":{
			"name":"function.aflat",
			"match": "\\b(fn|def)\\b"
		},
		"#slcomment":{
			"name": "comment.line.double-slash",
			"match": "\\/\\/.+"
		}
	},
	"scopeName": "source.aflat"
}