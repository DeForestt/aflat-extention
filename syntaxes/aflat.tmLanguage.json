{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "AFlat",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "oporators"
		},
		{
			"include": "function"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.aflat",
				"match": "\b(if|while|push|pull|as|return)\\b"
			},{
				"name": "keyword.dataType.aflat",
				"match": "\b(int|float|char|string|byte)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.aflat",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.aflat",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.aflat"
}