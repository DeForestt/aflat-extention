{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "AFlat",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comment"
		},
		{
			"include": "#class"
		},
		{
			"include": "#function"
		},
		{
			"include": "#slcomment"
		},
		{
			"include": "#char"
		},
		{
			"include": "#operators"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.aflat",
				"match": "\\b(if|while|class|struct|int|as|adr|char|float|return)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.aflat",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.aflat",
					"match": "\\\\."
				}
			]
		},
		"char": {
			"name":"string.quoted.single",
			"begin":"'",
			"end":"'",
			"patterns": [
				{
					"name": "constant.character.escape.aflat",
					"match": "\\\\."
				}
			]

		},
		"comment":{
			"name":"comment.block",
			"begin":"\\/\\*",
			"end":"\\*\\/"
		},
		"slcomment":{
			"name": "comment.line.double-slash",
			"match": "\\/\\/[^\\n]*"
		},
		"function": {
			"patterns": [{
				"name": "entity.name.function.aflat",
				"match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b"
			}]
		},
		"class": {
			"patterns": [{
				"name": "entity.name.type.class.aflat",
				"match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b"
			}]
		},
		"oporators" :{
			"patterns": [{
				"name": "keyword.operator.arithmetic.aflat",
				"match": "\\+|\\-|\\*|\\/|\\%|\\=|\\<|\\>|\\?"
			}]
		}
	},
	"scopeName": "source.aflat"
}