{
    "name": "aflat",
    "displayName": "AFlat",
    "description": "A VS Code Extention for an AFlat Project",
    "version": "0.0.1",
    "main": "./out/index.js",
    "activationEvents": ["onCommand:aflat.sayHello", "onLanguage:aflat"],
    "engines": {
        "vscode": "^1.61.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "capabilities": {
            "hoverProvider": true
        },
        "languages": [
            {
                "id": "aflat",
                "aliases": [
                    "AFlat",
                    "aflat"
                ],
                "extensions": [
                    ".af",
                    ".gs"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "semanticTokenTypes": [
            {
              "id": "templateType",
              "superType": "type",
              "description": "A template type."
            }
        ],
        "grammars": [
            {
                "language": "aflat",
                "scopeName": "source.aflat",
                "path": "./syntaxes/aflat.tmLanguage.json"
            }
        ],
        "configuration": {
            "title": "Aflat",
            "properties": {
              "aflat.stddir": {
                "type": ["string", "null"],
                "default": null,
                "description": "Specifies the folder path containing the tsserver and lib*.d.ts files to use."
              }
            }
        },
        "commands": [
            {
                "command": "aflat.run",
                "title": "Run"
            },
            {
                "command": "aflat.test",
                "title": "Test"
            },
            {
                "command": "aflat.build",
                "title": "Build"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "aflat.run",
                    "when": "resourceExtname == .af",
                    "group": "navigation"
                },
                {
                    "command": "aflat.test",
                    "when": "resourceExtname == .af",
                    "group": "navigation"
                },
                {
                    "command": "aflat.build",
                    "when": "resourceExtname == .af",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
      },
    "devDependencies": {
        "@types/node": "^8.10.66",
        "@types/vscode": "^1.64.0",
        "tslint": "^5.16.0",
        "typescript": "^4.5.5"
    }
}
