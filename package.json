{
    "name": "aflat",
    "displayName": "AFlat",
    "description": "A VS Code Extention for an AFlat Project",
    "version": "0.0.1",
    "main": "./out/index.js",
    "activationEvents": ["onCommand:aflat.sayHello", "onLanguage:aflat"],
    "engines": {
        "vscode": "^1.61.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "capabilities": {
            "hoverProvider": true
        },
        "languages": [
            {
                "id": "aflat",
                "aliases": [
                    "AFlat",
                    "aflat"
                ],
                "extensions": [
                    ".af",
                    ".gs"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "aflat",
                "scopeName": "source.aflat",
                "path": "./syntaxes/aflat.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "aflat.sayHello",
                "title": "Say Hello",
                "category": "AFlat"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
      },
    "devDependencies": {
        "@types/node": "^8.10.66",
        "@types/vscode": "^1.64.0",
        "tslint": "^5.16.0",
        "typescript": "^4.5.5"
    }
}
